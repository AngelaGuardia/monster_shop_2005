<h1>All Merchants</h1>

<ul>
  <h3>Enabled Merchants:</h3>
  <% @enabled_merchants.each do |merchant| %>
  <div id="merchant<%= merchant.id %>">
    <li><%= merchant.name %></li>
    <%= link_to "Disable Merchant", "merchant/#{merchant.id}/disable" %><br><br>
  </div>
  <% end %>

  <h3>Disabled Merchants:</h3>
  <% @disabled_merchants.each do |merchant| %>
  <div id="merchant<%= merchant.id %>">
    <li><%= merchant.name %></li>
    <%= link_to "Enable Merchant", "merchant/#{merchant.id}/enable" %><br><br>
  </div>
  <% end %>


</ul>
